<?xml version="1.0" encoding="UTF-8"?>
<dds xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:noNamespaceSchemaLocation="http://community.rti.com/schema/5.3.0/rti_routing_service.xsd">

  <routing_service name="dds-examples-routing">

    <administration>
      <domain_id>0</domain_id>
      <participant_qos base_name="QosLibrary::Base"/>
    </administration>

    <monitoring>
      <enabled>true</enabled>
      <domain_id>0</domain_id>
      <ignore_initialization_failure>true</ignore_initialization_failure>
      <participant_qos base_name="QosLibrary::Base"/>
    </monitoring>

    <domain_route name="Shapes">
      <participant_1>
        <domain_id>0</domain_id>
        <participant_qos base_name="QosLibrary::Base"/>
      </participant_1>
      <participant_2>
        <domain_id>1</domain_id>
        <participant_qos base_name="QosLibrary::Base"/>
      </participant_2>

      <session name="Square">
        <auto_topic_route name="Square">
          <input participant="1">
            <allow_topic_name_filter>Square</allow_topic_name_filter>
            <allow_registered_type_name_filter>ShapeType*</allow_registered_type_name_filter>
            <datareader_qos base_name="QosLibrary::Base"/>
          </input>
          <output>
            <allow_topic_name_filter>Square</allow_topic_name_filter>
            <allow_registered_type_name_filter>ShapeType*</allow_registered_type_name_filter>
            <datawriter_qos base_name="QosLibrary::Base"/>
          </output>
        </auto_topic_route>
      </session>
    </domain_route>

  </routing_service>

</dds>